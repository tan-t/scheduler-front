{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@domain/*":["src/main/domain/*"],
            "@service/*":["src/main/service/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}
